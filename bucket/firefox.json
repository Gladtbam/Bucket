{
    "version": "107.0.1",
    "description": "Popular open source web browser.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "notes": [
        "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
        "  - Run 'Firefox Profile Manager', choose 'Scoop' then click 'Start Firefox'.",
        "  - Visit 'about:profiles' page in Firefox to check *DEFAULT* profile.",
        "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/107.0.1/win64/zh-CN/Firefox%20Setup%20107.0.1.exe#/dl.7z",
            "hash": "sha512:a4bd900251676a27b47b7cd90d8bb829ece4938459cd70294756dc2023696ded69d19231e91bbc4315b3a66ea2ea19b8cbde1ca0c1383ea6b774552809ecccf1"
        },
        "32bit": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/107.0.1/win32/zh-CN/Firefox%20Setup%20107.0.1.exe#/dl.7z",
            "hash": "sha512:ae5bba37c4c34baf015ef4464857a34a8c1cabcabd8ea244eb53d71dcfef309971358a7967c89d9d19c50bd8f216577ea8f783a8bea735ec9bfcadf76e0b22fb"
        },
        "arm64": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/107.0.1/win64-aarch64/zh-CN/Firefox%20Setup%20107.0.1.exe#/dl.7z",
            "hash": "sha512:bfffa04338a9ce683a80d276d79f618c7d29be679b3d1f080b7207c217038369fa2bdca267afb69a9f743a7e41b281ce0011b5a0b8e2ef36074a2b2fb3c0aebf"
        }
    },
    "extract_dir": "core",
    "post_install": [
        "firefox -CreateProfile \"Scoop $persist_dir\\profile\"",
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ],
        [
            "firefox.exe",
            "Firefox Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win64/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/zh-CN/$basename"
                }
            },
            "32bit": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win32/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/zh-CN/$basename"
                }
            },
            "arm64": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win64-aarch64/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64-aarch64/zh-CN/$basename"
                }
            }
        }
    }
}
